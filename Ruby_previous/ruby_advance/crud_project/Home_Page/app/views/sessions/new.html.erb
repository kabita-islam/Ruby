<h2 align="center">Log In</h2>
<% if flash[:success] %>
  <p class="alert alert-success"><%= flash.now[:success] %></p>
<% end %>
<% if flash[:danger] %>
  <p class="alert alert-danger"><%= flash.now[:danger] %></p>
<% end %>

<div class="row">
    <div class="col-xs-12">
        <%= form_for :session, :html => {class: "form-horizontal", role: "form"}, url: login_path do |f| %>
    <div class="form-group">
        <div class="control-label col-sm-2">
             <%= f.label :email %>
        </div>
        <div class="col-sm-10">
            <%= f.email_field :email,class: "form-control",  placeholder:"Enter Email", autofocus:true%>
        </div>
    </div><br><br>

    <div class="form-group">
        <div class="control-label col-sm-2">
             <%= f.label :password %>
        </div>
        <div class="col-sm-10">
            <%= f.password_field :password,class: "form-control",  placeholder:"Enter password", autocomplete: "off" %>
        </div>
    </div><br><br>
    <div class="form-group ">
    <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Sign In", class: "btn btn-info btn-lg"  %>
    </div>
    </div>
        <% end %>
    </div>
</div>