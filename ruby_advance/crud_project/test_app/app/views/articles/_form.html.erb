
<% if @article.errors.any? %>
<ul>
   <%= @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
   <% end %>
</ul>
<% end %>
<%= form_for @article do |f| %>
 <p>
    <%=  f.label :title   %> 
    <%=  f.text_field :title %><br><br>
 </p>
 <p>
    <%=  f.label :description   %> 
    <%=  f.text_area :description %><br><br>

 </p>
 <p>
   <%= f.submit %>
 </p>
<% end %>