<h2 align="center">Edit Details</h2>

<%# <%= render 'form' %> 


<% if @user.errors.any? %>
<h2>The following errors are identified : </h2>
<ul>
    <%= @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
</ul>
<% end %>

<div class="row">
    <div class="col-xs-12">
        <%= form_for @user do |user| %>
    <div class="form-group" >
        <div class="control-label col-sm-2">
            <%= user.label :username%>
        </div>
        <div class="col-sm-10">
            <%= user.text_field :username,class: "form-control" , placeholder:"Enter username", autofocus:true %>
        </div>
    </div><br><br><br>

    <div class="form-group">
        <div class="control-label col-sm-2">
             <%= user.label :email%>
        </div>
        <div class="col-sm-10">
            <%= user.text_field :email,class: "form-control",  placeholder:"Enter Email", autofocus:true%>
        </div>
    </div><br><br>

    <div class="form-group">
        <div class="control-label col-sm-2">
             <%= user.label :password%>
        </div>
        <div class="col-sm-10">
            <%= user.text_field :password,class: "form-control",  placeholder:"Enter password", autofocus:true%>
        </div>
    </div><br><br>
    <div class="form-group ">
    <div class="col-sm-offset-2 col-sm-10">
        <%= user.submit "Update your account", class:'btn btn-info btn-lg ' %>
    </div>
    </div>
        <% end %>
    </div>
</div>


